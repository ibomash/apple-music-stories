{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "apple_docs": {
      "type": "local",
      "command": ["npx", "-y", "apple-doc-mcp-server@latest"],
      "enabled": true
    },
    "XcodeBuildMCP": {
      "type": "local",
      "command": ["npx", "-y", "xcodebuildmcp@latest"],
      "enabled": true
    },
    "puppeteer": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-puppeteer"],
      "enabled": true
    }
  }
}
